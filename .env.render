# RovicAppv2 Production Environment for Render.com
# Copy these settings to Render environment variables

APP_NAME="Rovic Meatshop"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://rovic-meatshop.onrender.com

# Database (PostgreSQL - Render will auto-configure these)
DB_CONNECTION=pgsql
DATABASE_URL=${DATABASE_URL}

# Session Configuration (8-hour sessions)
SESSION_DRIVER=database
SESSION_LIFETIME=480
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Cache & Queue (Database-backed)
CACHE_STORE=database
QUEUE_CONNECTION=database
BROADCAST_CONNECTION=log

# File Storage
FILESYSTEM_DISK=local

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=error

# Mail Configuration (Configure after deployment)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_FROM_NAME="Rovic Meatshop"

# Social Authentication (Optional - configure if needed)
FACEBOOK_CLIENT_ID=your_facebook_app_id
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret

GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Application Key (Render will generate this automatically)
APP_KEY=${APP_KEY}

